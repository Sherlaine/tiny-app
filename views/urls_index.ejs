<!DOCTYPE html>
<html lang="en">
<% include partials/_head %>

<body class="container">
    <% include partials/_header %>
    <h1>
        Your URLS
    </h1>
    <ul>
        <% for (let key in urls){ %>
        <% if (urls[key.userId === user.id]) { %>
        <li>
        <li><strong>
                <%= key %>: </strong>
            <%= urls[key].longURL %>
        </li>

        <form action="/urls/<%= key%>">
            <input type="submit" value="Edit" class="btn btn-default">
        </form>

        <form method="POST" action="/urls/<%= key %>/delete"> <input type="submit" value="Delete" class="btn btn-default">
        </form>
        

        <% } %>
        <%}%>
    <li>
            <a href="/urls/new">Create new link</a>
    </li>
    </ul>

</body>

</html>